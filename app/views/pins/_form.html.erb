<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %> - Upload New Photo to Override Image
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :pin_heading %>
    <%= f.text_field :pin_heading, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

    <div class="form-group">
       <%= f.label :cost %>
       <%= f.text_field :cost, :as=>:float, class: "form-control", :scale => 2 %>

     </div>

      <div class="form-group">
       <%= f.label :hours %>
       <%= f.text_field :hours, class: "form-control" %>
     </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>